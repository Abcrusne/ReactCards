<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="helloWorld" class="lt.itmokymai.spring.HelloWorld"
 init-method = "init" destroy-method = "destroy">
<property name="message" value="Hello World!" />
</bean>
 <bean class = "lt.itmokymai.spring.InitHelloWorld" />
 
 <bean id="serviceBBean" class="lt.itmokymai.spring.ServiceB">
<property name="serviceA" ref="serviceABean" />

</bean>
<bean id="serviceABean" class="lt.itmokymai.spring.ServiceA">

</bean>

<bean id = "serviceCBean" class ="lt.itmokymai.spring.ServiceC"
parent= "serviceABean">

<property name="lists">
		<list>
			<value>1</value>
			<ref bean="productsBean" />
			<bean class="lt.itmokymai.spring.Products">
				<property name="title" value="obuolys" />
				<property name="image" value="image" />
				<property name="desc" value="description" />
				<property name="price" value="0.2" />
				<property name="quantity" value="111" />
			</bean>
		</list>
	</property>
</bean>
</beans>